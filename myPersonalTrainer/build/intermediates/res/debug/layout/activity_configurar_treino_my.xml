<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    tools:context="ufba.mypersonaltrainner.ConfigurarTreinoActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:hint="Nome Do Treino"
            android:layout_height="match_parent"
            android:id="@+id/edt_nomeTreino"
            android:layout_weight="0.56" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBt_addExerc"
            android:src="@drawable/new_icon"
            />

        <TextView
            android:layout_width="76dp"
            android:layout_height="47dp"
            android:text="Adicionar EcercÃ­cio"
            android:id="@+id/txtView_addExerc" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="399dp"
            android:id="@+id/list_execiciosAdicionados" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
